<%= turbo_frame_tag "filter-modal-content" do %>
  <div class="modal-content">
    <h2 class="text-lg font-semibold mb-4">Filter Properties</h2>
    <!-- Add your filter form here -->
    <form>
      <!-- Example filter options -->
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700">Price Range</label>
        <input type="text" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" placeholder="Min Price">
        <input type="text" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" placeholder="Max Price">
      </div>
      <!-- Add more filter options as needed -->
      <button type="submit" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:w-auto sm:text-sm">
        Apply Filters
      </button>
    </form>
  </div>
<% end %>