<div class="px-4 sm:px-6 lg:px-8">
  <div class="text-center mb-8">
    <h1 class="text-4xl font-bold leading-tight text-gray-900 mb-2">Properties</h1>
    <p class="text-xl text-gray-700">A list of properties with key details.</p>
  </div>
  <div class="space-y-6">
    <%= form_with url: properties_path, method: :get, data: { turbo_frame: "properties" }, class: "flex items-center space-x-2" do |f| %>
      <div class="flex-grow w-11/12">
        <%= f.text_field :address, 
            placeholder: "Type address here...",
            oninput: "this.form.requestSubmit();",
            class: "mt-2 block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      </div>
      <%= link_to 'Filter', 
          filter_modal_properties_path,
          data: { turbo_frame: "modal" },
          class: "mt-2 px-2 py-1.5 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 text-sm w-1/12 inline-block text-center" 
      %>
    <% end %>

    <%= turbo_frame_tag "properties" do %>
      <div class="mt-8"> <!-- This adds top margin to the table --> 
        <%= render partial: "properties_table", locals: { properties: @properties } %>
      </div>
    <% end %>
  </div>
  <%= render partial: "filter_modal" %>
</div>
