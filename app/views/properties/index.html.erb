<div class="px-4 sm:px-6 lg:px-8 w-full">
  <div class="text-center mb-8 w-full">
    <h1 class="text-4xl font-bold leading-tight text-gray-900 mb-2">Properties</h1>
    <p class="text-xl text-gray-700">A list of properties with key details.</p>
  </div>
  <div class="space-y-6 w-full">
    <%= form_with url: properties_path, method: :get, data: { turbo_frame: "properties" }, class: "flex items-center space-x-2" do |f| %>
      <div class="flex-grow w-11/12">
        <%= f.text_field :address, 
            placeholder: "Type address here...",
            oninput: "this.form.requestSubmit();",
            class: "mt-2 block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      </div>
      <%= link_to 'Filter', 
          filter_modal_properties_path,
          data: { turbo_frame: "modal" },
          class: "mt-2 px-2 py-1.5 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 text-sm w-1/12 inline-block text-center" 
      %>
    <% end %>

    <div class="mt-8 w-full">
      <%= turbo_frame_tag "properties" do %>
        <dl class="mx-auto grid grid-cols-1 gap-px bg-gray-900/5 sm:grid-cols-2 lg:grid-cols-3">
          <div class="flex flex-col justify-between bg-white px-4 py-10 sm:px-6 xl:px-8 h-40 w-full"> <!-- Added fixed height -->
            <dt class="text-sm font-medium leading-6 text-gray-500"># of Properties</dt>
            <dd class="text-3xl font-medium leading-10 tracking-tight text-gray-900 overflow-hidden text-ellipsis">
              <%= number_with_delimiter(@properties.count) %>
            </dd>
          </div>
          <div class="flex flex-col justify-between bg-white px-4 py-10 sm:px-6 xl:px-8 h-40 w-full"> <!-- Added fixed height -->
            <dt class="text-sm font-medium leading-6 text-gray-500">Median Value of Properties</dt>
            <dd class="text-3xl font-medium leading-10 tracking-tight text-gray-900 overflow-hidden text-ellipsis">
              <%= number_to_currency(@median_price, precision: 0) %>
            </dd>
          </div>
          <div class="flex flex-col justify-between bg-white px-4 py-10 sm:px-6 xl:px-8 h-40 w-full"> <!-- Added fixed height -->
            <dt class="text-sm font-medium leading-6 text-gray-500">Homes Estimate Value</dt>
            <dd class="text-3xl font-medium leading-10 tracking-tight text-gray-900 overflow-hidden text-ellipsis">
              <%= number_to_currency(@median_homes_estimate_price, precision: 0) %>
            </dd>
          </div>
        </dl>
        <div class="mt-8 w-full"> <!-- This adds top margin to the table --> 
          <%= render partial: "properties_table", locals: { properties: @properties } %>
        </div>
      <% end %>
    </div>
  </div>
  <%= render partial: "filter_modal" %>

  <div class="flex items-center justify-center w-full">
    <div onclick="toggleSlideover()" class="cursor-pointer px-5 py-2 text-sm border text-gray-500 hover:bg-gray-100 rounded border-gray-300">Toggle Slide-over</div>
    <%= render partial: 'slideover_new' %>
  </div>
</div>
