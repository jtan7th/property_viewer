<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold leading-6 text-gray-900">Properties</h1>
      <p class="mt-2 text-sm text-gray-700">A list of properties with key details.</p>
    </div>
  </div>
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <table class="min-w-full">
          <thead class="bg-white">
            <tr>
              <th scope="col" class="py-5 px-10 text-left text-sm font-semibold text-gray-900 sm:pl-3">Address</th>
              <th scope="col" class="px-10 py-5 text-left text-sm font-semibold text-gray-900">Sale Price</th>
              <th scope="col" class="px-10 py-5 text-left text-sm font-semibold text-gray-900">Sold Date</th>
              <th scope="col" class="px-10 py-5 text-left text-sm font-semibold text-gray-900">Bedrooms</th>
              <th scope="col" class="px-10 py-5 text-left text-sm font-semibold text-gray-900">Bathrooms</th>
              <th scope="col" class="px-10 py-5 text-left text-sm font-semibold text-gray-900">Floor Area</th>
              <th scope="col" class="px-10 py-5 text-left text-sm font-semibold text-gray-900">Land Area</th>
              <th scope="col" class="relative py-5 px-10 sm:pr-3">
                <span class="sr-only">View</span>
              </th>
            </tr>
          </thead>
          <tbody class="bg-white">
            <% @properties.group_by(&:suburb).each do |suburb, properties| %>
              <tr class="border-t border-gray-200">
                <th colspan="8" scope="colgroup" class="bg-gray-50 py-2 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-3"><%= suburb %></th>
              </tr>
              <% properties.each do |property| %>
                <tr class="border-t border-gray-300">
                  <td class="whitespace-nowrap py-5 px-10 text-sm font-medium text-gray-900 sm:pl-3"> <%= property.address.split(',').first %> </td>
                  <td class="whitespace-nowrap px-10 py-5 text-sm text-gray-500"><%= property.sale_price %></td>
                  <td class="whitespace-nowrap px-10 py-5 text-sm text-gray-500"><%= property.sold_date %></td>
                  <td class="whitespace-nowrap px-10 py-5 text-sm text-gray-500"><%= property.bedroom_count %></td>
                  <td class="whitespace-nowrap px-10 py-5 text-sm text-gray-500"><%= property.bathroom_count %></td>
                  <td class="whitespace-nowrap px-10 py-5 text-sm text-gray-500"><%= property.floor_area %></td>
                  <td class="whitespace-nowrap px-10 py-5 text-sm text-gray-500"><%= property.land_area %></td>
                  <td class="relative whitespace-nowrap py-5 px-10 text-right text-sm font-medium sm:pr-3">
                    <%= link_to 'View', property_path(property), data: {turbo_frame: "modal"}, class: "text-indigo-600 hover:text-indigo-900" %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>