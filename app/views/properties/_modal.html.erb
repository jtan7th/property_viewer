<div id="modal-container" class="w-full h-full fixed inset-0 invisible flex items-center justify-center">
  <div onclick="toggleModal()" id="modal-bg" class="w-full h-full duration-500 ease-out transition-all inset-0 absolute bg-gray-200 bg-opacity-75 opacity-0"></div>
  <div id="modalxyz" class="bg-white w-full max-w-lg rounded-lg shadow-2xl overflow-hidden transform duration-300 ease-out transition-all">
    <div onclick="toggleModal()" class="absolute cursor-pointer text-gray-600 top-0 w-8 h-8 flex items-center justify-center right-0 mt-5 mr-5 z-10">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
    </div>
    
    <div id="modalContent">
      <%= turbo_frame_tag "modal_content" do %>
        <!-- Content will be loaded dynamically -->
      <% end %>
    </div>
  </div>
</div>